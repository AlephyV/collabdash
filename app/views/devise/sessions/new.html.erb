<% content_for(:body_class, "bg-neutral-950") %>

<div class="w-full max-w-sm bg-white border border-neutral-100 rounded p-8">
  <h2 class="text-2xl font-semibold text-neutral-900 mb-6">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
    <div class="mb-5">
      <%= f.label :email, class: "block text-sm text-neutral-500 mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: "w-full border-b border-neutral-300 bg-transparent py-2 text-neutral-900 focus:border-neutral-900 focus:outline-none" %>
    </div>

    <div class="mb-5">
      <%= f.label :password, class: "block text-sm text-neutral-500 mb-1" %>
      <%= f.password_field :password, autocomplete: "current-password",
          class: "w-full border-b border-neutral-300 bg-transparent py-2 text-neutral-900 focus:border-neutral-900 focus:outline-none" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-5 flex items-center gap-2">
        <%= f.check_box :remember_me, class: "accent-neutral-900" %>
        <%= f.label :remember_me, class: "text-sm text-neutral-500" %>
      </div>
    <% end %>

    <div>
      <%= f.submit "Log in",
          class: "w-full bg-neutral-900 text-white py-2 rounded cursor-pointer hover:bg-neutral-800 transition-colors" %>
    </div>
  <% end %>

  <div class="mt-6 flex justify-between text-sm">
    <%= link_to "Sign up", new_registration_path(resource_name), class: "text-neutral-500 hover:text-neutral-900" %>
    <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-neutral-500 hover:text-neutral-900" %>
  </div>
</div>
